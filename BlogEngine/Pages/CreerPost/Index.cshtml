@page
@model BlogEngine.Pages.CreerPost.CreerPostModel
@{
    ViewData["Title"] = "- Add Post";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">@ViewData["Title"]</h2>
            <hr />
        </div>
        <div class="mb-3">
             <div class="row pt-4">
                <div class="col-1">
                    <label asp-for="Post.Title"></label>
                </div>
                <div class="col-4">
                     <input asp-for="Post.Title" class="form-control" />
                     <span asp-validation-for="Post.Title" class="text-danger"></span>
                </div>
              </div>
               <div class="row pt-4">
                    <div class="col-1">
                        <label asp-for="Post.CategoryId"></label>
                    </div>
                    <div class="col-4">
                        <select asp-for="Post.CategoryId" asp-items="@Model.SelectCategories" class="form-control" >
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
                    </div>
              </div>
               <div class="row pt-4">
                <div class="col-1">
                    <label asp-for="Post.PublicationDate"></label>
                </div>
                <div class="col-4">
                     <input asp-for="Post.PublicationDate" class="form-control" />
                     <span asp-validation-for="Post.PublicationDate" class="text-danger"></span>
                </div>
              </div>

                <div class="row pt-4">  
                     <label asp-for="Post.Content"></label>
                    <div class="col-5">
                         <textarea rows="3" asp-for="Post.Content" class="form-control"></textarea>
                         <span asp-validation-for="Post.Content" class="text-danger"></span>
                    </div>  
                </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts
{
    <script type="application/javascript">
            $(window).on("load", () => {
                focusElement("Post_Title");
            });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}