@page "{id:int?}"
@model BlogEngine.Pages.EditerCategory.EditerCategoryModel
@{
    ViewData["Title"] = "- Edit Category";
}

<form method="post">
    <input hidden asp-for="Category.Id" />
    <input hidden asp-for="Category.TitleCache" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">@ViewData["Title"]</h2>
            <hr />
        </div>
        <div class="mb-3">
             <div class="row pt-4">
                <div class="col-1">
                    <label asp-for="Category.Title"></label>
                </div>
                <div class="col-4">
                     <input asp-for="Category.Title" class="form-control" />
                     <span asp-validation-for="Category.Title" class="text-danger"></span>
                </div>
              </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts
{
     <script type="application/javascript">
            $(window).on("load", () => {
                focusElement("Category_Title");
            });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}